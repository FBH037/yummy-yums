<div class="pull-right">
  <%= link_to 'Add A Recipe', new_recipe_path, class:"btn btn-primary" %>
</div>

<h1 class= "page-header">Your recipes</h1>
<%= link_to "All Recipes", recipes_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>
        Like?
      </th>
    <tr>
  </thead>
  <tbody>
    <tr>
      <% @user_recipes.each do |user_recipe| %>
        <td>
          <%= link_to user_recipe.recipe.title, recipe_path(user_recipe.recipe_id)%>
        </td>
        <td>
          <%= user_recipe.user_like %>
        </td>
        <td>
          <%= button_to "Like this recipe", like_path(user_recipe)%>
        </td>
      </tr>
      <%end%>

  </tbody>

</table>
