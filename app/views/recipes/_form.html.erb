<div class="col-md-12">

  <%= form_for @recipe, class:"form-horizontal"  do |f| %>
  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :title %>
      </div>
    </div>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :description %>
      </div>
    </div>
    <%= f.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :instruction %>
      </div>
    </div>
    <div>
      <%= f.text_area :instruction, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="action">
      <%= f.submit class:"btn btn-primary"  %>
    </div>
  </div>

<% end %>
</div>
