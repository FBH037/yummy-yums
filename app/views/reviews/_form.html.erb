<div class="row">
<div class="col-md-12">

  <%= form_for [@recipe, @review], class:"form-horizontal"  do |f| %>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :description %>
      </div>
    </div>
    <%= f.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <div class="action">
      <%= f.submit class:"btn btn-primary"  %>
    </div>
  </div>

<% end %>
</div>
</div>
