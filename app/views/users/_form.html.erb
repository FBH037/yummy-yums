<div class="col-md-offset-3 col-md-6">
<%= form_for @user, class:"form-horizontal"  do |f| %>
<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :first_name %>
    </div>
  </div>
  <%= f.text_field :first_name, class:"form-control" %>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :last_name %>
    </div>
  </div>
  <%= f.text_area :last_name, class:"form-control" %>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :email %>
    </div>
  </div>
  <div>
    <%= f.text_area :email, class:"form-control" %>
  </div>
</div>

<div class="form-group">
    <div class="control-label">
      <%= f.label :role, 'Role:' %>&nbsp;&nbsp;
      <%= f.collection_select :role, ["admin", "member"] %>

    </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :password %>
    </div>
  </div>
  <div>
    <%= f.password_field :password, class:"form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :password_confirmation %>
    </div>
  </div>
  <div>
    <%= f.password_field :password_confirmation, class:"form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="action">
    <%= f.submit class:"btn btn-primary"  %>
  </div>
</div>
<% end %>
</div>
