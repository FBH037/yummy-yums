<%= form_for @user, class:"form-horizontal"  do |f| %>
<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :first_name %>
    </div>
  </div>
  <%= f.text_field :first_name, class:"form-control" %>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :last_name %>
    </div>
  </div>
  <%= f.text_area :last_name, class:"form-control" %>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :email %>
    </div>
  </div>
  <div>
    <%= f.text_area :email, class:"form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :role, 'Role:' %>
    </div>
  </div>
  <div class="field">
    <div class="control-label">
      <%= f.radio_button :role, 'admin' %>
      <%= f.label :role, 'admin', :value => 'admin' %>
    </div>
  </div>
  <div>
    <%= f.radio_button :role, 'member' %>
    <%= f.label :role, 'member', :value => 'member' %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :password %>
    </div>
  </div>
  <div>
    <%= f.password_field :password, class:"form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label">
      <%= f.label :password_confirmation %>
    </div>
  </div>
  <div>
    <%= f.password_field :password_confirmation, class:"form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="action">
    <%= f.submit class:"btn btn-primary"  %>
  </div>
</div>
<% end %>
