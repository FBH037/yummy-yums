<div class="container col-md-12">
<br>

  <%= form_for @user, class:"form-horizontal"  do |f| %>
  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :first_name %>
      </div>
    </div>
    <%= f.text_field :first_name, class:"form-control" %>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :last_name %>
      </div>
    </div>
    <%= f.text_area :last_name, class:"form-control" %>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :email %>
      </div>
    </div>
    <div>
      <%= f.text_area :email, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :role %>
      </div>
    </div>
    <div>
      <%= f.text_area :role, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :password %>
      </div>
    </div>
    <div>
      <%= f.text_area :password, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :password_confirmation %>
      </div>
    </div>
    <div>
      <%= f.text_area :password_confirmation, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="action">
      <%= f.submit class:"btn btn-primary"  %>
    </div>
  </div>
</div>
<% end %>
